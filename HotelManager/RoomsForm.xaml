<Window x:Class="HotelManager.RoomsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManager"
        mc:Ignorable="d"
        FontSize="27"
        Title="RoomsForm" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="cmbRooms" Grid.Row="1" Grid.Column="1"></ListBox>
        <StackPanel Grid.Row="1" Grid.Column="2" Margin="10 0 0 0">
            <Button x:Name="btnAdd" Click="btnAdd_Click">Add room</Button>
            <TextBlock></TextBlock>
            <Button x:Name="btnFees" Click="btnFees_Click">Alter fees</Button>
        </StackPanel>
    </Grid>
</Window>
