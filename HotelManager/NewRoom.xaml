<Window x:Class="HotelManager.NewRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManager"
        mc:Ignorable="d"
        FontSize="27"
        ResizeMode="NoResize"
        Title="NewRoom" Height="350" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Left" MinWidth="500" Margin="5,10,0,10" Grid.Column="1" Grid.ColumnSpan="2">
            <TextBlock Margin="10">Room Number</TextBlock>
            <TextBox x:Name="txtRoomNum" Margin="10"></TextBox>
            <TextBlock Margin="10">Number of beds</TextBlock>
            <TextBox x:Name="txtBeds" Margin="10"></TextBox>
            <Button x:Name="btnSubmit" Margin="10" Click="btnSubmit_Click">Submit</Button>
        </StackPanel>
    </Grid>
</Window>
